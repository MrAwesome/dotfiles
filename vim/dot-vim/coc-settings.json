{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp", "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "BLEHpython.jediEnabled": false,
    "BLEHpython.linting.mypyEnabled": false,
    "BLEHpython.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",

    "diagnostic.virtualText": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "float",
    "diagnostic.level": "information",
    "signature.enable": false,
    "coc.preferences.snippets.enable": true,
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "suggest.autotrigger": "trigger",

    //"BLEHrust-analyzer.diagnostics.enable": false,
    //"BLEHrust-analyzer.server.path": "/home/glenn/bin/rust-analyzer-wrapper",
    //"BLEHrust-analyzer.cargo.target": "mipsel-sony-psp",
    "python.linting.banditEnabled": true,
    "eslint.packageManager": "yarn",
    "eslint.formatter": "prettier",

    "inlayHint.enable":false
}
